<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/widget_size_10"
        android:layout_marginTop="@dimen/widget_size_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivObjectView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/widget_size_100"
            android:adjustViewBounds="true"
            android:src="@drawable/test"/>

        <RadioGroup
            android:id="@+id/rgTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbTabBackground"
                style="@style/AutoDrawTab"
                android:text="@string/background"/>

            <RadioButton
                android:id="@+id/rbTabPaint"
                style="@style/AutoDrawTab"
                android:text="@string/paint"/>

            <RadioButton
                android:id="@+id/rbTabLine"
                style="@style/AutoDrawTab"
                android:text="@string/line"/>

            <RadioButton
                android:id="@+id/rbTabSpeed"
                style="@style/AutoDrawTab"
                android:text="@string/speed"/>

            <RadioButton
                android:id="@+id/rbTabSave"
                style="@style/AutoDrawTab"
                android:text="@string/save"/>
        </RadioGroup>
    </LinearLayout>

    <com.ue.autodraw.AutoDrawView
        android:id="@+id/advOutline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
