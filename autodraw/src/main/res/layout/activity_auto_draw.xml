<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--画板-->
    <com.ue.autodraw.AutoDrawView
        android:id="@+id/advOutline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!--分享-->
    <LinearLayout
        android:id="@+id/vgShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/col_eeeeee"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvShareDrawPicture"
            style="@style/AutoDrawTab"
            android:background="?attr/selectableItemBackground"
            android:text="@string/share_draw_picture"/>

        <TextView
            android:id="@+id/tvShareDrawVideo"
            style="@style/AutoDrawTab"
            android:background="?attr/selectableItemBackground"
            android:text="@string/share_draw_video"/>
    </LinearLayout>
    <!--设置-->
    <include layout="@layout/layout_auto_draw_settings"/>
</FrameLayout>