<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--todo:后续可以建立系列的ViewGroup style,方便使用-->
    <!--LinearLayout width:match,height:wrap,orientation:horizontal-->
    <style name="LL_MWH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LL_MWV">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="GraffitiButton">
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/sel_menu_text_color</item>
        <item name="android:background">@color/col_384252</item>
        <item name="android:paddingTop">@dimen/widget_size_4</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@color/col_181e2a</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingBottom">@dimen/widget_size_4</item>
    </style>

    <style name="MenuSeparator">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">@dimen/widget_size_10</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/col_343d4d</item>
    </style>

    <style name="GraffitiDialog">
        <item name="android:windowBackground">@drawable/sha_bg_white_corner5</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullScreenDialog" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="NormalText">
        <item name="android:textSize">@dimen/font_size_15</item>
        <item name="android:textColor">@color/col_666666</item>
    </style>

    <style name="PenButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/col_666666</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>