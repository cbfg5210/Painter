<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="gr_GraffitiButton">
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/gr_sel_menu_text_color</item>
        <item name="android:background">@color/col_384252</item>
        <item name="android:paddingTop">@dimen/widget_size_4</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@color/col_181e2a</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingBottom">@dimen/widget_size_4</item>
    </style>

    <style name="gr_MenuPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/widget_size_50</item>
    </style>

    <style name="gr_MenuSeparator">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">@dimen/widget_size_15</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/col_343d4d</item>
    </style>

    <style name="gr_GraffitiDialog">
        <item name="android:windowBackground">@drawable/gr_sha_bg_white_corner5</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="gr_PenButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/col_666666</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/widget_size_2</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>