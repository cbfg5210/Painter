<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/widget_size_15"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPenCatTitle"
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/col_298ecb"
        tools:text="@string/dialog_pen_txt_shape"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/widget_size_5"
        android:layout_marginRight="@dimen/widget_size_5"
        android:background="@color/col_298ecb"/>
</LinearLayout>