<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ue.graffiti.widget.TextImageView
        android:id="@+id/tivCanvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:gr_type="image"/>

    <LinearLayout
        android:id="@+id/vgTopToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/col_384252"
        android:gravity="center_vertical"
        android:minHeight="@dimen/widget_size_50"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCancel"
            style="@style/GraffitiButton"
            android:src="@drawable/btn_refuse_normal"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/gr_insert_picture"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/rbImage"
            style="@style/GraffitiButton"
            android:src="@drawable/btn_sure_normal"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvSelectPicture"
        style="@style/GraffitiButton"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:drawableTop="@drawable/btn_picture_normal"
        android:gravity="center"
        android:text="@string/gr_gallery"/>

</FrameLayout>