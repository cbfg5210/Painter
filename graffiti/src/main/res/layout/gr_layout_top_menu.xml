<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vgTopMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvColor"
        style="@style/gr_GraffitiButton"
        android:drawableTop="@drawable/btn_colorpicker_normal"
        android:text="@string/gr_color"
        android:textColor="#ff298ecb"/>

    <View style="@style/gr_MenuSeparator"/>

    <TextView
        android:id="@+id/tvPen"
        style="@style/gr_GraffitiButton"
        android:drawableTop="@drawable/btn_pen_normal"
        android:text="@string/gr_pen"/>

    <View style="@style/gr_MenuSeparator"/>

    <TextView
        android:id="@+id/tvClear"
        style="@style/gr_GraffitiButton"
        android:drawableTop="@drawable/btn_clear_normal"
        android:text="@string/gr_clear"/>

    <View style="@style/gr_MenuSeparator"/>

    <TextView
        android:id="@+id/tvSave"
        style="@style/gr_GraffitiButton"
        android:drawableTop="@drawable/btn_save_normal"
        android:text="@string/gr_save"/>

    <View style="@style/gr_MenuSeparator"/>

    <TextView
        android:id="@+id/tvShare"
        style="@style/gr_GraffitiButton"
        android:layout_height="match_parent"
        android:drawablePadding="@dimen/widget_size_4"
        android:drawableTop="@drawable/gr_svg_share_wrapper"
        android:paddingTop="@dimen/widget_size_8"
        android:text="@string/gr_share"/>
</LinearLayout>