<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--**********************************************
    *                  Dialog                        *
    **********************************************-->
    <style name="qmui_dialog_wrap">
        <item name="android:background">?attr/qmui_dialog_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">?attr/qmui_dialog_margin_vertical</item>
        <item name="android:layout_marginBottom">?attr/qmui_dialog_margin_vertical</item>
    </style>

    <style name="qmui_tip_dialog_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">?attr/qmui_tip_dialog_min_width</item>
        <item name="android:minHeight">?attr/qmui_tip_dialog_min_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">?attr/qmui_content_spacing_horizontal</item>
        <item name="android:layout_marginRight">?attr/qmui_content_spacing_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">?attr/qmui_tip_dialog_padding_horizontal</item>
        <item name="android:paddingRight">?attr/qmui_tip_dialog_padding_horizontal</item>
        <item name="android:paddingTop">?attr/qmui_tip_dialog_padding_vertical</item>
        <item name="android:paddingBottom">?attr/qmui_tip_dialog_padding_vertical</item>
        <item name="android:background">?attr/qmui_tip_dialog_bg</item>
    </style>


    <!--********************* Loading *********************-->
    <style name="QMUI_Loading">
        <item name="qmui_loading_view_size">?attr/qmui_loading_size</item>
        <item name="android:color">?attr/qmui_loading_color</item>
    </style>

    <!--********************* Dialog *********************-->

    <style name="QMUI.Dialog" parent="android:Theme.Dialog">
        <item name="android:backgroundDimAmount">?attr/qmui_dialog_background_dim_amount</item>
        <item name="android:windowBackground">@color/qmui_config_color_transparent</item>
        <item name="android:windowNoTitle">true</item><!-- 不用window title，使用自己的layout来做title -->
        <!-- <item name="android:windowTitleStyle">@style/dialog_title</item> --><!-- 不用设置windowStyleStyle，因为windowNoTitle=true -->
        <item name="android:windowIsFloating">true</item><!-- 在中间弹框、背后有遮罩的效果 -->
        <item name="android:minWidth">?attr/qmui_dialog_min_width</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">?attr/qmui_dialog_margin_horizontal</item>
        <item name="android:layout_marginRight">?attr/qmui_dialog_margin_horizontal</item>
    </style>

    <style name="QMUI.TipDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="QMUI.BottomSheet" parent="android:Theme.Dialog">
        <item name="android:backgroundDimAmount">?attr/qmui_dialog_background_dim_amount</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null
        </item><!-- 为了避免在有 NavigationBar 的手机上 Dialog 从 NavigationBar 底部上来。去掉 Dialog 的动画，使用 View 的动画。-->
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--**********************************************
    *                  appearance                        *
    **********************************************-->
    <style name="TextAppearanceBase" parent="android:TextAppearance.Holo"/>

    <style name="QMUITextAppearance" parent="TextAppearanceBase">
        <item name="android:textColor">?attr/qmui_config_color_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHighlight">?attr/qmui_config_color_background_pressed</item>
    </style>

    <style name="QMUITextAppearance.Title"/>

    <style name="QMUITextAppearance.Title.Gray">
        <item name="android:textColor">?attr/qmui_config_color_gray_3</item>
    </style>

    <style name="QMUITextAppearance.ListItem">
        <item name="android:textColor">@color/qmui_s_list_item_text_color</item>
    </style>

    <style name="QMUITextAppearance.GridItem"/>

    <style name="QMUITextAppearance.GridItem.Small">
        <item name="android:textColor">@color/qmui_config_color_gray_3</item>
        <item name="android:textSize">11sp</item>
    </style>
</resources>