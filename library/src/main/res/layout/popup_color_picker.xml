<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.ue.library.widget.colorpicker.HueSeekBar
        android:id="@+id/hsbHueSeekBar"
        android:layout_width="@dimen/widget_size_200"
        android:layout_height="@dimen/widget_size_30"
        android:layout_marginTop="@dimen/widget_size_8"
        app:layout_constraintLeft_toLeftOf="@+id/svvSatValView"
        app:layout_constraintRight_toRightOf="@+id/svvSatValView"
        app:layout_constraintTop_toBottomOf="@+id/svvSatValView"/>

    <com.ue.library.widget.colorpicker.AlphaSeekBar
        android:id="@+id/asbAlphaSeekBar"
        android:layout_width="@dimen/widget_size_200"
        android:layout_height="@dimen/widget_size_30"
        android:layout_marginBottom="@dimen/widget_size_8"
        android:layout_marginTop="@dimen/widget_size_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/svvSatValView"
        app:layout_constraintRight_toRightOf="@+id/svvSatValView"
        app:layout_constraintTop_toBottomOf="@+id/hsbHueSeekBar"/>

    <com.ue.library.widget.colorpicker.SatValView
        android:id="@+id/svvSatValView"
        android:layout_width="@dimen/widget_size_200"
        android:layout_height="@dimen/widget_size_200"
        android:layout_marginEnd="@dimen/widget_size_8"
        android:layout_marginLeft="@dimen/widget_size_8"
        android:layout_marginRight="@dimen/widget_size_8"
        android:layout_marginStart="@dimen/widget_size_8"
        android:layout_marginTop="@dimen/widget_size_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>